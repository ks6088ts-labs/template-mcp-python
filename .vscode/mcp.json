{
  "servers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest", "--caps=vision"],
      "transport": "stdio"
    },
    "image-transfer": {
      "command": "uv",
      "args": [
        "run",
        "python",
        "scripts/mcp_runner.py",
        "image-transfer",
        "--verbose"
      ],
      "transport": "stdio"
    },
    "image-analyzer": {
      "command": "uv",
      "args": [
        "run",
        "python",
        "scripts/mcp_runner.py",
        "image-analyzer",
        "--verbose"
      ],
      "transport": "stdio"
    }
  }
}
