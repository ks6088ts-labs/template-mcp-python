{
  "servers": {
    // Playwright MCP server: https://github.com/microsoft/playwright-mcp
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--vision"
      ]
    },
    "image-transfer": {
      "command": "uv",
      "args": [
        "run",
        "python",
        "scripts/mcp_runner.py",
        "image-transfer",
        "--verbose"
      ]
    },
    "image-analyzer": {
      "command": "uv",
      "args": [
        "run",
        "python",
        "scripts/mcp_runner.py",
        "image-analyzer",
        "--verbose"
      ]
    },
  }
}
